extends layout

block content
  div
      h2 Galleries
      div(class="row")
          each item in galleries
                  div(class="col-sm-3")
                      div(class="panel panel-info")
                          div(class="panel-heading panel-title text-center gallery-panel")
                            a(href="/gallery/#{item.path}") #{item.title}
                          div(class="panel-body text-center")
                            a(href="/gallery/#{item.path}")
                                img(src="#{item.config.thumbnail}")
